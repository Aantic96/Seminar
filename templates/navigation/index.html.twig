{% extends 'base.html.twig' %}

{% block title %}Navigation index{% endblock %}

{% block body %}
    <h1>Navigation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for navigation in navigations %}
            <tr>
                <td>{{ navigation.id }}</td>
                <td>{{ navigation.name }}</td>
                <td>
                    <a href="{{ path('app_navigation_show', {'id': navigation.id}) }}">show</a>
                    <a href="{{ path('app_navigation_edit', {'id': navigation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_navigation_new') }}">Create new</a>
{% endblock %}
